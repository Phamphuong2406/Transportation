        <script>
            //Nếu localStorage có access_token, nó sẽ được gửi trong header.
            $(document).ready(function () {
                $.ajaxSetup({
                    beforeSend: function (xhr) {
                        let token = localStorage.getItem("access_token");
                        if (token) {
                            xhr.setRequestHeader("Authorization", "Bearer " + token);
                        }
                    }
                });
            });
            //Nếu localStorage không có access_token, người dùng sẽ bị chuyển hướng về trang đăng nhập /account/login.
            document.addEventListener("DOMContentLoaded", function () {
                let token = localStorage.getItem("access_token");
                if (!token) {
                    window.location.href = "/account/login"; // Chuyển về trang đăng nhập nếu chưa đăng nhập
                }
            });
            //Dùng fetch API để tự động gửi token trong tất cả các request.
            function fetchWithAuth(url, options = {}) {
                let token = localStorage.getItem("access_token");
                let headers = new Headers({
                    "Content-Type": "application/json",
                    ...options.headers
                });

                if (token) {
                    headers.append("Authorization", "Bearer " + token);
                }

                return fetch(url, { ...options, headers });
            }
       </script>
    
