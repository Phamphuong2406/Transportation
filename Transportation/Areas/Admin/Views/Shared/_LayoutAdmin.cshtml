    <script>
        async function logout() {
            try {
                const response = await fetch('/api/AccountAPI/Logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    window.location.href = '/Account/LogIn';
                } else {
                    alert('Đăng xuất thất bại.');
                }
            } catch (error) {
                console.error('Lỗi khi đăng xuất:', error);
            }
        }
    </script>
    
