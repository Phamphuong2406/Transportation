@model Transportation.Infrastructure.Data.Truck
@{
    ViewData["Title"] = "RegisterTruck";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    <style>
        #map {
            height: 400px;
            border: 1px solid #ccc;
        }

        .coordinate {
            position: absolute;
            bottom: 10px;
            left: 10px;
            background: rgba(255, 255, 255, 0.7);
            padding: 5px;
            border-radius: 5px;
        }

        .suggestions {
            position: absolute;
            top: calc(100% + 5px);
            left: 0;
            z-index: 1000;
            background: white;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            max-height: 200px;
            overflow-y: auto;
            width: 100%;
        }

        .suggestion-item {
            padding: 8px;
            cursor: pointer;
            font-size: 14px;
            border-bottom: 1px solid #f0f0f0;
        }

            .suggestion-item:last-child {
                border-bottom: none;
            }

            .suggestion-item:hover {
                background: #f7f7f7;
            }

        .form-group {
            position: relative;
        }
    </style>
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container">
    <div class="card-body p-0">
        <div class="row">
            <div id="map" class="col-lg-6"></div>
            <div class="col-lg-6">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Đăng ký xe tải</h1>
                    </div>
                    <form asp-action="RegisterTruck" asp-controller="Trucks" method="post" class="row g-3 needs-validation" novalidate>
                        <div class="form-group row">
                            <div class="col-sm-4 mb-3">
                                <label class="form-label">Tải trọng</label>
                                <input asp-for="Capacity" class="form-control" required pattern="\d+" title="Vui lòng nhập số hợp lệ">
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                            <div class="col-sm-4">
                                <label class="form-label">Nhiên liệu</label>
                                <select asp-for="FuelType" class="form-control" required>
                                    <option value="">-- Chọn nhiên liệu --</option>
                                    <option value="Xăng">Xăng</option>
                                    <option value="Dầu">Dầu</option>
                                </select>
                                <span asp-validation-for="FuelType" class="text-danger"></span>
                            </div>
                            <div class="col-sm-4">
                                <label class="form-label">Biển số xe</label>
                                <input asp-for="LicensePlate" class="form-control" required>
                                <span asp-validation-for="LicensePlate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3">
                                <label class="form-label">Định mức tiêu thụ</label>
                                <input asp-for="ConsumptionRate" class="form-control" required pattern="\d+(\.\d+)?" title="Vui lòng nhập số hợp lệ">
                                <span asp-validation-for="ConsumptionRate" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label">Tài xế</label>
                                <select asp-for="DriverId" class="form-control" asp-items="ViewBag.Driver" required>
                                    <option value="">-- Chọn tài xế --</option>
                                </select>
                                <span asp-validation-for="DriverId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Địa điểm đỗ</label>
                            <input id="parkingLocation" type="text" class="form-control" placeholder="Nhập địa chỉ" required autocomplete="off">
                            <div id="suggestions" class="suggestions"></div>
                        </div>
                        <input type="hidden" id="Latitude" name="Latitude" />
                        <input type="hidden" id="Longitude" name="Longitude" />
                        <div class="col-12">
                            <button class="btn btn-primary w-100" type="submit">Đăng ký</button>
                        </div>
                    </form>
                    <div class="coordinate">Lat: 0, Lng: 0</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var map = L.map('map').setView([21.028511, 105.804817], 13);

        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        var currentMarker = L.marker([21.028511, 105.804817], { draggable: true }).addTo(map); //dragable: có thể kéo được

        function updateCoordinates(lat, lng) { // gọi hàm update với 2 giá trị truyền vào
            document.getElementById('Latitude').value = lat;
            document.getElementById('Longitude').value = lng;
            document.querySelector('.coordinate').innerText = `Lat: ${lat.toFixed(5)}, Lng: ${lng.toFixed(5)}`;
        }

        currentMarker.on('dragend', function (e) {
            var latlng = e.target.getLatLng(); // target: mmụjc tiêu
            updateCoordinates(latlng.lat, latlng.lng);
        });

        let debounceTimeout; //debounce : giải phóng
        document.getElementById('parkingLocation').addEventListener('input', function () {
            clearTimeout(debounceTimeout);
            const query = this.value.trim(); //trim cắt tỉa, dọn dẹp
            if (query.length < 3) return;

            debounceTimeout = setTimeout(() => {
                fetch(`https://nominatim.openstreetmap.org/search?q=${encodeURIComponent(query)}&format=json&addressdetails=1&limit=5`)
                    .then(response => response.json())
                    .then(data => {
                        const suggestions = document.getElementById('suggestions');
                        suggestions.innerHTML = '';

                        if (data.length === 0) {
                            suggestions.innerHTML = '<div class="text-muted">Không tìm thấy kết quả</div>';
                            return;
                        }

                        data.forEach(place => {
                            const item = document.createElement('div');
                            item.classList.add('suggestion-item');
                            item.innerText = place.display_name;

                            item.addEventListener('click', function () {
                                document.getElementById('parkingLocation').value = place.display_name;
                                updateCoordinates(parseFloat(place.lat), parseFloat(place.lon));
                                currentMarker.setLatLng([place.lat, place.lon]);
                                map.setView([place.lat, place.lon], 15);
                                suggestions.innerHTML = '';
                            });

                            suggestions.appendChild(item);
                        });
                    })
                    .catch(error => {
                        console.error('Error fetching Nominatim data:', error);
                        const suggestions = document.getElementById('suggestions');
                        suggestions.innerHTML = '<div class="text-danger">Lỗi khi tải dữ liệu. Vui lòng thử lại.</div>';
                    });
            }, 300);
        });
    </script>
}
